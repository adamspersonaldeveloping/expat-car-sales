<%- include('partials/header') -%>



<main class="container">

  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label text-secondary"
            >Email address</label
          >
          <input
            style="background:rgba(255,255,255,0.7)"
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            placeholder="Email Address"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label text-secondary">Password</label>
          <input
            style="background:rgba(255,255,255,0.7)"
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
            placeholder="Password"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <span class="ml-3 text-secondary">No account? <a href="/signup" class="btn btn-primary">Sign Up</a></span>
      </form>
      <div class="">
        <p class="text-white pt-2">Not a member yet? Click below to sign up</p>
        <a href="/signup"><button type="submit pt-2" class="btn btn-primary">Sign Up</button></a>
      </div>
      
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
