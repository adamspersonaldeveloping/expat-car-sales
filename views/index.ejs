<%- include('partials/header') -%>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center justify-content-center g-5 py-5">
      <div class="col-10 col-sm-8 col-lg-6 ">
        <iframe src="https://player.vimeo.com/video/683765463?h=8ec88a168d" class="d-block mx-lg-auto" width="640" height="360" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen loading="lazy"></iframe>
        
        <!-- <img src="https://res.cloudinary.com/dllmha3wx/image/upload/v1663975642/two-old-fashioned_bmvefe.jpg" class="d-block mx-lg-auto img-fluid" alt="cocktails and more" width="700" height="500" > -->
      </div>
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3 text-white">EXPAT CAR SALES</h1>
        <h1 class="display-5 fw-bold lh-1 mb-3 text-info">WELCOMES YOU</h1>
        <h4 class="display-5 fw-bold lh-1 mb-3 text-info">The Trusted Brand in Kuala Lumpur</h4>
        <p class="lead text-light">Since 2004, Expat Car Sales has provided Kuala Lumpur with a wide range of vehicle purchasing and renting options. We pride ourselves in only stocking well-maintained vehicles to meet the needs and standards of even the most discerning drivers.</p>
        
      </div>
    </div>
    <div class="col col-lg-10 justify-content-center">
      <p class="text-light">Ready to buy, rent, or sell a car?</p>
      <span class="mb-5"><a class="text-light" href="/contact">Contact us</a> today.</span><br>
      <a href="/feed" class="mt-5 mb-5 btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">Visit our virtual Showroom</a> 
    </div>
    <div class="blaze-slider my-slider">
      <div class="blaze-container">
        <div class="blaze-track-container">
          <div class="blaze-track">
            <% for(let i=0; i<posts.length; i++) {%>
              <%if(posts[i].forRent != true){ %>
              <div class="">
                <a class="text-decoration-none" href="/post/<%= posts[i]._id%>">
                  <img class="ps-1 pe-1 img-fluid" src="<%= posts[i].exteriorImage[0]%>">
                  <span class="ps-1 pe-1 h6 text-light mt-4 text-decoration-none"><%= posts[i].year %> <%= posts[i].make %> <%= posts[i].model %></span><br>
                  <span class="ps-1 pe-1 h6 text-light mt-2"> ______</span><br>
                  <span class="ps-1 pe-1 h6 text-light mt-2"><%= posts[i].priceOfficial === '' ? posts[i].priceWanted : posts[i].priceOfficial %></span>
                </a>
              </div>
              <% } %>
            <% } %> 
          </div>
        </div>
      </div>
      <div class="controls">
        <button class="blaze-prev">prev</button>
        <div class="blaze-pagination"></div>
        <button class="blaze-next">next</button>
      </div>
    </div>
    
    <div class="justify-content-center">
      <a href="/feed" class="col-lg-4 btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">Visit our virtual Showroom</a> 
    </div>

    <div class="blaze-slider my-slider">
      <div class="blaze-container">
        <div class="blaze-track-container">
          <div class="blaze-track">
            <% for(let i=0; i<posts.length; i++) {%>
              <%if(posts[i].forRent == true){ %>
